<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_row_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#032365">

        <ImageView
            android:id="@+id/image_of_post"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_documents_icon" />

        <TextView
            android:id="@+id/name_of_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:hint="Name"
            android:textColor="@color/colorLightGrey"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_of_post"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/location_of_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:hint="Default Place"
            android:textColor="@color/colorLightGrey"
            android:textSize="@dimen/_12ssp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/image_of_post"
            app:layout_constraintTop_toBottomOf="@+id/name_of_post" />

        <TextView
            android:id="@+id/description_of_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:breakStrategy="balanced"
            android:hint="Description"
            android:textColor="@color/colorLightGrey"
            android:textSize="@dimen/_10ssp"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/image_of_post"
            app:layout_constraintTop_toBottomOf="@+id/location_of_post" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

